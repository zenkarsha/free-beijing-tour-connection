.page-banner
  position relative
  width 100%
  height 0
  padding-top 300px
  background-size contain
  background-position center
  background-repeat no-repeat
  background-image url('/images/cover.png')
  background-color #000
  margin-bottom 100px

  &:after
    content ''
    position absolute
    bottom -100px
    left 0
    right 0
    height 100px
    background red
    background #000
    background linear-gradient(180deg, #000 0%, #333 100%)
    z-index 8964

  +below(__)
    background-size cover
    padding-top 200px
    margin-bottom 50px
    &:after
      bottom -50px
      height 50px
