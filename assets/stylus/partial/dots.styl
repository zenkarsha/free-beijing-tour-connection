ul.dots
  display flex
  justify-content center
  flex-wrap wrap
  width 100%
  max-width 700px
  padding 50px
  margin auto
  position relative
  user-select none
  background #333
  overflow hidden

  +below(__)
    padding 0px
    max-width 100vw

  &.selected-row-0-4 .dot-item:nth-child(1):before
  &.selected-row-5-9 .dot-item:nth-child(6):before
  &.selected-row-10-14 .dot-item:nth-child(11):before
  &.selected-row-15-19 .dot-item:nth-child(16):before
  &.selected-row-20-24 .dot-item:nth-child(21):before
    width calc(500% + 70px)

  &.selected-row-0-20 .dot-item:nth-child(1):after
  &.selected-row-1-21 .dot-item:nth-child(2):after
  &.selected-row-2-22 .dot-item:nth-child(3):after
  &.selected-row-3-23 .dot-item:nth-child(4):after
  &.selected-row-4-24 .dot-item:nth-child(5):after
    height calc(500% + 70px)

  &.selected-row-0-24:before
  &.selected-row-4-20:after
    width calc(100% * 1.38 - 100px)
    +below(__)
      width calc(100% * 1.412 + 70px)

  &:before
  &:after
    content ''
    position absolute
    width 0
    height 0
    border-bottom 6px solid #000
    top 50px
    margin-top -3px
    z-index 8964
    transition width 2s

  &:before
    left 50px
    margin-left -3px
    transform: rotate(45deg)
    transform-origin left top
    +below(__)
      left 0
      top 0

  &:after
    right 50px
    margin-right -3px
    transform: rotate(-45deg)
    transform-origin right top
    +below(__)
      right 0
      top 0

  .dot-item
    list-style none
    display flex
    padding 0
    margin 5px
    flex 1 0 calc(20% - 10px)
    cursor pointer
    position relative

    &:nth-child(1):before
    &:nth-child(6):before
    &:nth-child(11):before
    &:nth-child(16):before
    &:nth-child(21):before
      content ''
      width 0
      height 0
      border-bottom 6px solid #000
      position absolute
      left -15px
      top 50%
      margin-top -3px
      z-index 8964
      transition width 1s

    &:nth-child(1):after
    &:nth-child(2):after
    &:nth-child(3):after
    &:nth-child(4):after
    &:nth-child(5):after
      content ''
      width 0
      height 0
      border-right 6px solid #000
      position absolute
      left 50%
      top -15px
      margin-left -3px
      z-index 8964
      transition height 1s

    .dot-text-wrapper
      display block
      width 100%
      height 0
      padding-top 100%
      box-sizing border-box
      position relative
      border-radius 50%
      transition background .25s ease-in-out
      overflow hidden

      span
        display flex
        justify-content center
        align-items center
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        padding 10px
        text-align center
        line-height 1.2rem
        font-size 1.2rem
        color #000 !important
        border-radius 50%
        border 3px solid #EEE
        background #CCC

        &:hover
          background #FFF

        +below(__)
          padding 3px
          line-height .75rem
          font-size .75rem

      &.selected span
        border 3px solid red
        background red
        color #FFF
        &:hover
          border 3px solid red
          background red
